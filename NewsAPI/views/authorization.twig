{% extends 'layout.twig' %}
{% block content %}



    <h1>Authorization please</h1>
    <br>
    <br>

    <form style="position: relative; margin-top: 20px;" action="/authorization" method="post">
        <label for="Email">Email</label>
        <label for="name"></label><input class="border" type="text" name="email" required/> <br>

        <label for="password">Password</label>
        <input class="border" type="password" name="password" required/>


        <input type="submit" value="Login"/><br>
        <br>
    </form>


    <p>If you don't have account, add it!</p><br>
    <div class="email">
        <form class="search" action="/register" method="get">
            <button style="border-radius: 20px;"
                    class="bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded">
                Registration!
            </button>
        </form>
    </div>
{% endblock %}
